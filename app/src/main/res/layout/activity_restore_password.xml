<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/resetPasswordBackground1"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/background_login_chat" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/restoreBtn"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"

                        android:background="@drawable/backgroung_restore_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                        app:srcCompat="@drawable/backgroung_restore_btn" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="335dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mail_48px" />

                        <EditText
                            android:id="@+id/emailEd"
                            android:layout_width="275dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:backgroundTint="@drawable/color_selector"
                            android:ellipsize="end"
                            android:ems="10"
                            android:gravity="left"
                            android:hint="Email account"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:textColorHint="@color/white_lavender"
                            android:textSize="30sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send a letter"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/restoreBtn"
                        app:layout_constraintEnd_toEndOf="@+id/restoreBtn"
                        app:layout_constraintStart_toStartOf="@+id/restoreBtn"
                        app:layout_constraintTop_toTopOf="@+id/restoreBtn" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/arrow_back_48_px_reset_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_back_48_px_reset_password"
                tools:srcCompat="@drawable/arrow_back_48_px_reset_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>